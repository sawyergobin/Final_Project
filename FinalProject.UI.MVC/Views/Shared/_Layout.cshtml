<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Paws N Claws</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="A mock website for managing reservations at pet hotels" />
    <meta name="keywords" content="dogs, cats, boarding, overnight, pets, kansas city, customer service" />
    <meta name="author" content="Sawyer Gobin" />

    <link href="https://fonts.googleapis.com/css?family=Raleway:100,300,400,700" rel="stylesheet">

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/Content/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/Content/css/icomoon.css">
    <!-- Themify Icons-->
    <link rel="stylesheet" href="~/Content/css/themify-icons.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css">
    <!-- Owl Carousel  -->
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <!-- Theme style  -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!--jQuery UI Style-->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/cupertino/jquery-ui.css">


    <!--Custom StyleSheet-->
    <link rel="stylesheet" href="~/Content/css/custom.css">
    <!-- Modernizr JS -->
    <script src="~/Content/js/modernizr-2.6.2.min.js"></script>
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @* PreLoader *@
    <div class="gtco-loader"></div>

    <div id="page">
        <nav class="gtco-nav" role="navigation">
            <div class="gtco-container">

                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div id="gtco-logo"><a href="@Url.Action("Index", "Home")"><img src="~/Content/images/PNCLogoTiny40x40.png" alt="Paws N Claws Logo"></a></div>
                        @Html.Partial("_LoginPartial")
                    </div>
                    <div class="col-xs-8 text-right menu-1">
                        <ul>
                            <li class="active"><a href="@Url.Action("Index", "Home")">Home</a></li>

                            @* Admin Only Dropdown *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="has-dropdown">
                                    <a href="javascript:void(0)">ADMIN</a>
                                    <ul class="dropdown">
                                        <li><a href="@Url.Action("Index", "UsersAdmin")">Users Admin</a></li>
                                        <li><a href="@Url.Action("Index", "RolesAdmin")">Roles Admin</a></li>
                                        <li><a href="@Url.Action("Create", "Locations")">Add New Daycare</a></li>
                                    </ul>
                                </li>
                            }
                            @* Different Dropdowns here depending on role *@
                            @if (User.IsInRole("Pet Owner"))
                            {
                                <li class="has-dropdown">
                                    <a href="javascript:void(0)">My Pets</a>
                                    <ul class="dropdown">
                                        <li><a href="@Url.Action("Index", "Pets")">All My Pets</a></li>
                                        <li><a href="@Url.Action("Create", "Pets")">Add New Pet</a></li>
                                    </ul>
                                </li>
                            }
                            else if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                            {
                                <li class="has-dropdown">
                                    <a href="javascript:void(0)">Pets</a>
                                    <ul class="dropdown">
                                        <li><a href="@Url.Action("Index", "Pets")">All Pets</a></li>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li><a href="@Url.Action("Create", "Pets")">Add New Pet</a></li>
                                        }
                                    </ul>
                                </li>
                            }

                            @if (Request.IsAuthenticated)
                            {
                                <li><a href="@Url.Action("Index","Reservations")">Reservations</a></li>
                            }
                            <li><a href="@Url.Action("Index", "Locations")">Our Locations</a></li>
                            @if (Request.IsAuthenticated)
                            {
                                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                            }


                        </ul>
                    </div>
                </div>

            </div>
        </nav>

        <div id="mainContent">
            @RenderBody()
        </div>

        <footer id="gtco-footer" class="gtco-section" role="contentinfo">
            <div class="gtco-container">
                @if (Request.IsAuthenticated)
                {
                    <div class="row row-pb-sm">
                        <div class="col-md-8 col-md-offset-2 gtco-cta text-center">
                            <h3>Questions? Ask us!</h3>
                            <p><a href="@Url.Action("Contact", "Home")" class="btn btn-white btn-outline">Contact Us</a></p>
                        </div>
                    </div>
                }
                <div class="row row-pb-md">
                    <div class="col-md-6 gtco-widget gtco-footer-paragraph">
                        <h3>Paws N Claws Daycare Group</h3>
                        <p>Where your fur family is our family</p>
                    </div>
                    <div class="col-md-6 gtco-footer-link">
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="gtco-list-link">
                                    <li>Paws N Claws Home Page: <a href="@Url.Action("Index", "Home")" class="ti-home"></a></li>
                                    <li>My Portfolio Site: <a href="http://www.sawyergobin.com" target="_blank" class="ti-desktop"></a></li>
                                    <li>My Public Repositories: <a href="https://github.com/sawyergobin?tab=repositories" target="_blank" class="ti-ink-pen"></a></li>
                                    <li>My LinkedIn Profile: <a href="https://www.linkedin.com/in/sawyer-gobin/" target="_blank" class="ti-linkedin"></a></li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <a>(234)-456-2342</a>
                                    <br>
                                    <a>info@pnc.com</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="gtco-copyright">
                <div class="gtco-container">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <p><small>&copy; @DateTime.Now.Year By Sawyer Gobin. All Rights Reserved. </small></p>
                        </div>
                        <div class="col-md-6 text-right">
                            <p><small>Designed by <a href="http://freehtml5.co/" target="_blank">FreeHTML5.co</a> Converted and styled by <a href="http://www.sawyergobin.com">Sawyer Gobin</a></small> </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="~/Content/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <!-- Carousel -->
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <!-- Magnific Popup -->
    <script src="~/Content/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/js/magnific-popup-options.js"></script>
    <!-- Main -->
    <script src="~/Content/js/main.js"></script>



    @RenderSection("scripts", required: false)
</body>

